<UserControl x:Class="WPF_TechMarketManagement.Views.UserControls.UCSingleItems.UCTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:WPF_TechMarketManagement.Views.UserControls.UCSingleItems"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="200">
    <Grid Background="White">
        <TextBox x:Name="txtInput" TextChanged="txtInput_TextChanged" 
                 HorizontalContentAlignment="Left" VerticalAlignment="Center" Background="Transparent"/>
        <TextBlock x:Name="tbPlaceHolder" VerticalAlignment="Center" Text="Text here" FontSize="13" FontWeight="Light"
                   Foreground="DarkGray" Margin="5,0,0,0" Panel.ZIndex="-1"/>
        <!--Panel is layer <txtInput -> to click-->
        <Button x:Name="btnClear" Width="30" HorizontalAlignment="Left" Content="X"
                Foreground="LightGray" Background="Transparent" BorderThickness="0" Click="btnClear_Click" Margin="170,0,0,3" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
