<UserControl x:Class="wpf_TechMarketMangement.UserControls.UCSingleItem.UCCarousel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:local="clr-namespace:wpf_TechMarketMangement.UserControls.UCSingleItem"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="1200">
    <Grid>
        <hc:Carousel Margin="32" IsCenter="True" AutoRun="True" Width="1200" Height="500" VerticalAlignment="Center">
            <Image Width="1200" Stretch="UniformToFill" />
            <hc:SimplePanel Width="1200">
                <Image Stretch="UniformToFill"  />
            </hc:SimplePanel>
            <Image Width="1200" Stretch="UniformToFill"  />
        </hc:Carousel>
    </Grid>
</UserControl>
