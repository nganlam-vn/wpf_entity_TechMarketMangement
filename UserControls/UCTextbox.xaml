<UserControl x:Class="wpf_TechMarketMangement.UserControls.UCTextbox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf_TechMarketMangement.UserControls"
             mc:Ignorable="d" 
             Name="ucTextBox"
             d:DesignHeight="35" d:DesignWidth="200">
    <Grid Background="White">
        <TextBox x:Name="txtInput" 
                 HorizontalContentAlignment="Left" VerticalAlignment="Center" Background="Transparent"/>
        <TextBlock x:Name="tbPlaceHolder" VerticalAlignment="Center" Text="Text here" FontSize="13" FontWeight="Light"
                   Foreground="DarkGray" Margin="5,0,0,0" Panel.ZIndex="-1"/>
        <!--Panel is layer <txtInput -> to click-->
        <!--replace event click with command-->
        <Button x:Name="btnClear" Command="{Binding DeleteTextCommand}" CommandParameter="{Binding ElementName=ucTextBox}"
                Width="30" HorizontalAlignment="Left" Content="X"
                    Foreground="LightGray" Background="Transparent" BorderThickness="0" Click="btnClear_Click" Margin="170,0,0,3" VerticalAlignment="Bottom"/>
    </Grid>
</UserControl>
