<Window x:Class="wpf_TechMarketMangement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_TechMarketMangement"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:uc="clr-namespace:wpf_TechMarketMangement.UserControls"
        xmlns:i= "http://schemas.microsoft.com/xaml/behaviors"
        xmlns:vm="clr-namespace:wpf_TechMarketManagemnet.ViewModels"
        mc:Ignorable="d"
        DataContext="{StaticResource MainVM}"
        Name="mainWindow"
        Title="MainWindow" Height="600" Width="1200">
    <Grid>
        <i:Interaction.Triggers>
            <!--truyen su kien loaded cua window vao viewmodel-->
            <i:EventTrigger EventName="Loaded">
                <i:InvokeCommandAction Command="{Binding LoadedWindowCommand}"
                                       CommandParameter="{Binding ElementName=mainWindow}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <ScrollViewer>
            <uc:UCProduct_Show></uc:UCProduct_Show>
        </ScrollViewer>
        <!--using DataContext from mainViewModel-->
       
    </Grid>
</Window>
